[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
	conflictStyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[pager]
	branch = false
[user]
	email = agilesteel@gmail.com
	name = Vladyslav Pekker
[pull]
	rebase = true
	twohead = ort
[rebase]
	autosquash = true
	abbreviateCommands = true
[credential]
	helper = cache --timeout 3600
[rerere]
	enabled = true
[init]
	defaultBranch = main
[advice]
	detachedHead = false
[include]
	path = ~/.local/.gitconfig
