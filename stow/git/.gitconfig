[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
	conflictStyle = diff3
[mergetool]
	keepBackup = false
[mergetool "vscode"]
	cmd = code --wait $MERGED
[pager]
	branch = false
	diff = delta
	log = delta
	reflog = delta
	show = delta
[user]
	email = agilesteel@gmail.com
	name = Vladyslav Pekker
[pull]
	rebase = true
	twohead = ort
[rebase]
	autosquash = true
	abbreviateCommands = true
[credential]
	helper = cache --timeout 3600
[rerere]
	enabled = true
[init]
	defaultBranch = main
[advice]
	detachedHead = false
[include]
	path = ~/.local/.gitconfig
[delta]
	syntax-theme = base16-ocean.dark
	line-numbers = true
	plus-style = syntax omit
	minus-style = syntax omit
	line-numbers-minus-style = red
	line-numbers-plus-style = green
	minus-emph-style = red omit
	plus-emph-style = green omit
	side-by-side = true
	plus-empty-line-marker-style = omit
	minus-empty-line-marker-style = omit
[submodule]
	recurse = true
